<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HealhyGrove</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.css' rel='stylesheet' />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <style>

        body {
            background-color: whitesmoke;
            font-family: "Exo 2";
            font-size:15px;
        }
    </style>

</head>

<body>

    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#ecf0f1; border-color:darkgrey; padding-left:50px; padding-right:50px; padding-top:20px; padding-top:20px;">


            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>

                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Home")"><img src="~/Image/logo.png" style="height:50px; padding-right:20px" /></a>

            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Solving Weed Problems", "AboutPlants", "Home")</li>
                    <li>@Html.ActionLink("Remove Weeds", "RemoveWeed", "Invasives")</li>
                    <li>@Html.ActionLink("Weed Disposal", "Disposal", "Invasives")</li>
                    <li>@Html.ActionLink("Nursery", "FindNursery", "Home")</li>
                    <li>@Html.ActionLink("Glossary", "FAQ", "Home")</li>
                </ul>

                @*@Html.Partial("_LoginPartial")*@

            </div>

    </div>

    <div style="padding-top:20px; padding-bottom:60px">
        @RenderBody()
    </div>

    <footer style="background-color:#2C3E50; color:darkgray">
        <div class="container" style="padding:50px">
            <div class="row">
                <div class="col-sm-12">
                    <h3 style="">About Us</h3>
                    <p>GardenBloomVic aims to be a platform used by a majority of Victorian home gardeners. We are dedicated to provide access to up-to-date information regarding Invasive Plants and help these gardeners to use a sustainable approach towards the containment and eradication of Invasive Weeds. This will help save their gardens, the environment and maintain balance in the ecological system.</p>
                </div>
            </div>
        </div>

    </footer>
    <footer style="background-color:#18212b; color:darkgray">
        <div class="container" style="padding:10px">
            <div class="row">
                <div class="col-lg-12 text-center text-white">
                    &copy; @DateTime.Now.Year - GardenBloomVic</div>
            </div>
        </div>
    </footer>



    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>

</html>
