<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HealhyGrove</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    <!--<script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />-->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.js'></script>
    <link href='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.css' rel='stylesheet' />
    <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
    <style>

        body {
            background-color: whitesmoke;
            font-family: "Exo 2";
            font-size: 15px;
            padding: 0px;
        }
    </style>

</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-fixed-top navbar-light" style="background-color:#ecf0f1; border-color:darkgrey">


        <div class="navbar-brand">
            <a href="@Url.Action("Index", "Home")"><img src="~/Image/logo.png" style="height:50px; padding-right:20px" /></a>
        </div>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="nav navbar-nav ml-auto" style="color:darkgray">
                <li class="nav-link">@Html.ActionLink("Home", "Index", "Home")</li>
                <li class="nav-link">@Html.ActionLink("Solving Weed Problems", "AboutPlants", "Home")</li>
                <li class="nav-link">@Html.ActionLink("Remove Weeds", "RemoveWeed", "Invasives")</li>
                <li class="nav-link">@Html.ActionLink("Weed Disposal", "Disposal", "Invasives")</li>
                <li class="nav-link">@Html.ActionLink("Nursery", "FindNursery", "Home")</li>
                <li class="nav-link">@Html.ActionLink("Glossary", "FAQ", "Home")</li>
            </ul>

            @*@Html.Partial("_LoginPartial")*@

        </div>

    </nav>

    <div style="padding-bottom:60px">
        @RenderBody()
    </div>

    <footer style="background-color:#2C3E50; color:darkgray">
        <div class="container" style="padding:50px">
            <div class="row">
                <div class="col-sm-12">
                    <h3 style="">About Us</h3>
                    <p>GardenBloomVic aims to be a platform used by a majority of Victorian home gardeners. We are dedicated to provide access to up-to-date information regarding Invasive Plants and help these gardeners to use a sustainable approach towards the containment and eradication of Invasive Weeds. This will help save their gardens, the environment and maintain balance in the ecological system.</p>
                </div>
            </div>
        </div>

    </footer>
    <footer style="background-color:#18212b; color:darkgray">
        <div class="container" style="padding:10px">
            <div class="row">
                <div class="col-lg-12 text-center text-white">
                    &copy; @DateTime.Now.Year - GardenBloomVic</div>
            </div>
        </div>
    </footer>



    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

</body>

</html>
