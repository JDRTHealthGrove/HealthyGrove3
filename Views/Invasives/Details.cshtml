@model HealthyGrove.Models.Invasive

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h5>
        @Html.ActionLink("Home", "Index", "Home")
        &nbsp;/&nbsp;
        @Html.ActionLink("Find Invasive Plants", "Index")
        &nbsp;/&nbsp;
        @Html.DisplayFor(model => model.ScientificName)
    </h5>
    <h2 class="text-center">Details of @Html.DisplayFor(model => model.ScientificName)</h2>
    <hr />
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12 col-md-3">
            <div class="col-sm-12 row-space">
                <img id="plantimage" src=@Html.Raw(@Html.DisplayFor(model => model.Image)) class="img-responsive center-block" style="height: 400px" />
            </div>
            <div class="col-sm-12 text-center">
                <h2 style="padding-bottom:0px;">@Html.DisplayFor(model => model.CommonName)</h2>
                <h3 style="margin-top:5px;" class="text-muted"><em>@Html.DisplayFor(model => model.ScientificName)</em></h3>
            </div>
            <div class="col-sm-12" style="margin-top:40px;">
                <div class="row">
                    <div class="col-sm-6">
                        <!-- Tile here -->
                        <div class="card-tile text-center">
                            <img src="~/Image/Icons/riskRating.png" class="img-circle" />
                            <div class="title">Potential for Invasiveness</div>
                            <div class="value">@Html.DisplayFor(model => model.Potential_for_invasion)</div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <!-- Tile 2 here -->
                        <div class="card-tile text-center">
                            <img src="~/Image/Icons/potentialForInvasion.png" class="img-circle" />
                            <div class="title">Potential for Invasion</div>
                            <div class="value">@Html.DisplayFor(model => model.Potential_for_invasion)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-9">
            <div class="row">
                <div class="col-sm-2 col-sm-offset-1">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/plantType.png" class="img-circle" />
                        <div class="title">Plant Type</div>
                        <div class="value">@Html.DisplayFor(model => model.PlantType)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/grass.png" class="img-circle" />
                        <div class="title">Weed Status</div>
                        <div class="value">@Html.DisplayFor(model => model.WeedStatus)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/victorianStatus.png" class="img-circle" />
                        <div class="title">Victorian Status</div>
                        <div class="value">@Html.DisplayFor(model => model.VictorianStatus)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/areaOfPotentialDistributionRemaining.png" class="img-circle" />
                        <div class="title">Area of Potential Spread Remaining</div>
                        <div class="value">@Html.DisplayFor(model => model.Area_of_potential_distribution_remaining)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/plantFamily.png" class="img-circle" />
                        <div class="title">Family</div>
                        <div class="value">@Html.DisplayFor(model => model.Family)</div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:30px">
                <div class="col-sm-2 col-sm-offset-1">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/vicBiome.png" class="img-circle" />
                        <div class="title">Victorian Biomes</div>
                        <div class="value">@Html.DisplayFor(model => model.VictorianBiomes)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/impactOnNaturalSystems.png" class="img-circle" />
                        <div class="title">Impact on Natural Systems</div>
                        <div class="value">@Html.DisplayFor(model => model.Impact_on_natural_systems)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/native.png" class="img-circle" />
                        <div class="title">Native to Victoria?</div>
                        <div class="value">@Html.DisplayFor(model => model.Native)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/rateOfDispersal.png" class="img-circle" />
                        <div class="title">Rate of Dispersal</div>
                        <div class="value">@Html.DisplayFor(model => model.Rate_of_dispersal)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/height.png" class="img-circle" />
                        <div class="title">Height Ranges</div>
                        <div class="value">@Html.DisplayFor(model => model.HeightRanges)</div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:30px;">
                <div class="col-sm-2 col-sm-offset-1">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/spreadRanges.png" class="img-circle" />
                        <div class="title">Spread Ranges</div>
                        <div class="value">@Html.DisplayFor(model => model.SpreadRanges)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/flower.png" class="img-circle" />
                        <div class="title">Flower Colour</div>
                        <div class="value">@Html.DisplayFor(model => model.FlowerColour)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/foliage.png" class="img-circle" />
                        <div class="title">Leaf Colour</div>
                        <div class="value">@Html.DisplayFor(model => model.LeafColour)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/climate.png" class="img-circle" />
                        <div class="title">Climate</div>
                        <div class="value">@Html.DisplayFor(model => model.ClimateZones)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/tree.png" class="img-circle" />
                        <div class="title">Abcission</div>
                        <div class="value">@Html.DisplayFor(model => model.Abcission)</div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:30px;">
                <div class="col-sm-2 col-sm-offset-1" style="vertical-align:baseline;">
                    <!-- Tile here -->
                    <div class="card-tile text-center">
                        <img src="~/Image/Icons/soil.png" class="img-circle" />
                        <div class="title">Soil Type</div>
                        <div class="value">@Html.DisplayFor(model => model.SoilType)</div>
                    </div>
                </div>
                <div class="col-sm-2">
                    <!-- Tile 2 here -->
                    <div class="card-tile text-center" style="vertical-align:baseline;">
                        <img src="~/Image/Icons/sunlight.png" class="img-circle" />
                        <div class="title">Light Needs</div>
                        <div class="value">@Html.DisplayFor(model => model.LightNeeds)</div>
                    </div>
                </div>
                <div class="col-sm-2 col-sm-offset-4" style="vertical-align:baseline;">
                        <div class="row text-center">
                            @Html.ActionLink("Remove this weed", "RemoveWeed", "Invasives", new { @class = "btn btn-success btn-lg" })
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
